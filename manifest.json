{
  "name": "Copy HTML",
  "description": "ðŸ“ƒ Chrome extension to easily copy a page's HTML to the clipboard.",
  "version": "0.1",
  "manifest_version": 3,
  "content_scripts": [
    {
      "js": ["src/_js/content.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "action": {
    "default_popup": "src/popup.html",
    "default_icon": "images/icon-512.png"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+B",
        "mac": "Command+B"
      }
    }
  },
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png",
    "256": "images/icon-256.png",
    "512": "images/icon-512.png"
  }
}
